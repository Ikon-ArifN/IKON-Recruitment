<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_job_skill_form" model="ir.ui.view">
        <field name="name">hr.job.skill.form</field>
        <field name="model">hr.job</field>
        <field name="arch" type="xml">
            <form>
                <!-- Tambahkan bidang-bidang yang diperlukan di sini -->
                <group>
                    <field name="name"/>
                    <!-- Tambahan bidang skill yang terkait dengan hr.skill -->
                    <field name="skill_ids" widget="many2many_tags" options="{'no_create_edit': True}"/>
                    <!-- Bidang-bidang lainnya -->
                </group>
            </form>
        </field>
    </record>
</odoo>
