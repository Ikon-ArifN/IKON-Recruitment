<odoo>
    <data>
        <!-- Define the view for the import wizard -->
        <record id="view_import_data_wizard" model="ir.ui.view">
            <field name="name">import.data.wizard.form</field>
            <field name="model">import.data.wizard</field>
            <field name="arch" type="xml">
                <form string="Import Data" class="oe_window_form" version="7.0">
                    <group>
                        <field name="data_file" filename="file_name"/>
                    </group>
                    <footer>
                        <button string="Import" type="object" name="perform_import" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Define the action for the import wizard -->
        <record id="action_import_data_wizard" model="ir.actions.act_window">
            <field name="name">Import Data</field>
            <field name="res_model">import.data.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_import_data_wizard"/>
            <field name="target">new</field>
        </record>

        <!-- Link the action to the menu item -->
        <menuitem id="menu_import_data" name="Import Data" parent="menu_ppu_invoice_list" action="action_import_data_wizard"/>
    </data>
</odoo>
