<odoo>
    <data>
        <!-- Form View -->
        <record id="view_ppu_invoice_form" model="ir.ui.view">
            <field name="name">ppu.invoice.form</field>
            <field name="model">ppu_invoice.invoice</field>
            <field name="arch" type="xml">
                <form string="PPU Invoice">
                    <header>
                    <button name="action_automate" string="Test" type="object" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="id_number"/>
                            <field name="payment_type"/>
                            <field name="price_net"/>
                            <field name="price_gross"/>
                            <field name="currency"/>
                            <field name="status"/>
                            <field name="seller_name"/>
                            <field name="buyer_name"/>
                            <field name="issue_date"/>
                            <field name="payment_to"/>
                            <field name="paid"/>
                            <field name="tax_name_type"/>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>
        <!-- Tree View -->
        <record id="view_ppu_invoice_tree" model="ir.ui.view">
            <field name="name">ppu.invoice.tree</field>
            <field name="model">ppu_invoice.invoice</field>
            <field name="arch" type="xml">
                <tree string="PPU Invoice">
                            <field name="id_number"/>
                            <field name="payment_type"/>
                            <field name="price_net"/>
                            <field name="price_gross"/>
                            <field name="currency"/>
                            <field name="status"/>
                            <field name="seller_name"/>
                            <field name="buyer_name"/>
                </tree>
            </field>
        </record>




        <!-- Action -->
        <record id="action_ppu_invoice" model="ir.actions.act_window">
            <field name="name">PPU Invoice</field>
            <field name="res_model">ppu_invoice.invoice</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_ppu_invoice_tree"/>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new PPU Invoice
                </p>
            </field>
        </record>

        <!-- Menu Item -->
        <menuitem id="menu_ppu_invoice" name="PPU Invoice"  action="action_ppu_invoice" sequence="10"/>
    </data>
</odoo>
