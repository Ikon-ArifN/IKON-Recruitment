        <!-- Tree View -->
        <record id="view_ppu_invoice_tree" model="ir.ui.view">
            <field name="name">ppu.invoice.tree</field>
            <field name="model">ppu.invoice</field>
            <field name="arch" type="xml">
                <tree string="PPU Invoices">
                    <field name="employee_id_number"/>
                    <field name="full_name"/>
                    <field name="gender"/>
                    <field name="date_of_hire"/>
                    <field name="department_description"/>
                     <field name="jasa" string="JASA"/>
                    <!-- Add other fields to display in the tree view -->
                </tree>
            </field>
        </record>

        <!-- Action for Tree View -->
        <record id="action_ppu_invoice_tree" model="ir.actions.act_window">
            <field name="name">PPU Invoices</field>
            <field name="res_model">ppu.invoice</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_ppu_invoice_tree"/>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new PPU Invoice
                </p>
            </field>
        </record>

        <record id="action_ppu_invoice_report" model="ir.actions.report">
    <field name="name">PPU Invoice Report</field>
    <field name="model">ppu.invoice</field>
    <field name="report_type">qweb-pdf</field>
    <field name="report_name">ppu_invoice.report_ppu_invoice</field>
    <field name="binding_model_id" ref="model_ppu_invoice"/>
</record>

